= content_for :sub_nav do
  .scrolling-tabs-container.sub-nav-scroll
    = render 'shared/nav_scroll'
    .nav-links.sub-nav.scrolling-tabs
      %ul{ class: (container_class) }
        - can_edit = can?(current_user, :admin_project, @project)
        -if can_edit
          = nav_link(controller: :general) do
            = link_to project_settings_general_path(@project), title: 'General' do
              %span
                General
        = nav_link(controller: :members) do
          = link_to project_settings_members_path(@project), title: 'Members' do
            %span
              Members
        -if can_edit
          = nav_link(controller: :integrations) do
            = link_to project_settings_integrations_path(@project), title: 'Integrations' do
              %span
                Integrations
          = nav_link(controller: :repository) do
            = link_to project_settings_repository_path(@project), title: 'Repository' do
              %span
                Repository
          = nav_link(controller: :automations) do
            = link_to project_settings_automations_path(@project), title: 'Automations / CI' do
              %span
                Automation / CI
